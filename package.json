{
  "name": "sudojo_bot",
  "version": "1.0.3",
  "description": "Microsoft Bot Framework bot for Sudoku hints",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "license": "BUSL-1.1",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.68",
    "@sudobility/sudojo_ocr": "^1.1.0",
    "@sudobility/sudojo_types": "^1.2.27",
    "@sudobility/types": "^1.9.50",
    "botbuilder": "^4.23.1",
    "botbuilder-dialogs": "^4.23.1",
    "restify": "^11.1.0",
    "tesseract.js": "^5.1.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.10.0",
    "@types/restify": "^8.5.12",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.54.0"
  }
}
